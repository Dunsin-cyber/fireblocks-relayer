{
  "name": "relayer",
  "version": "1.0.0",
  "description": "bridge between fireblocks and moniehub",
  "keywords": [
    "bitcoin",
    "crypto",
    "ralyer",
    "wallet"
  ],
  "homepage": "https://github.com/Dunsin-cyber/fireblocks-relayer#readme",
  "bugs": {
    "url": "https://github.com/Dunsin-cyber/fireblocks-relayer/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Dunsin-cyber/fireblocks-relayer.git"
  },
  "license": "ISC",
  "author": "Dunsin",
  "type": "commonjs",
  "main": "src/server.ts",
  "scripts": {
    "clean": "rimraf dist",
    "dev": "nodemon --legacy-watch  -r tsconfig-paths/register src/server.ts",
    "build": "npm run clean && tsc && cp -r src/prisma/ dist/prisma/ && cp -r src/docs/ dist/docs/",
    "start": "node  dist/server.js",
    "format": "npx prettier --write .",
    "prisma:generate": "prisma generate",
    "start:prod": "npm run db:deploy:prod && npm run start",
    "db:deploy": "cd ./src && npx prisma migrate deploy",
    "db:deploy:prod": "cd ./dist",
    "db:migrate": "cd ./src && npx prisma migrate dev --name fix_wallet_relation"
  },
  "_moduleAliases": {
    "@": "./dist"
  },
  "dependencies": {
    "@fireblocks/ts-sdk": "^12.1.0",
    "@prisma/client": "^6.14.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "glob": "^11.0.3",
    "module-alias": "^2.2.3",
    "morgan": "^1.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tsconfig-paths": "^4.2.0",
    "uuid": "^13.0.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/module-alias": "^2.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.10",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "nodemon": "^3.1.10",
    "prettier": "^2.6.2",
    "prisma": "^6.14.0",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  },
  "engines": {
    "yarn": "^1.22.19"
  }
}
